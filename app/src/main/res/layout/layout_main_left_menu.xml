<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/leftMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bass_background_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_list"
        style="@style/LeftMenuTextStyle"
        android:drawableLeft="@mipmap/icon_list"
        android:text="榜单" />

    <TextView
        android:id="@+id/tv_class"
        style="@style/LeftMenuTextStyle"
        android:drawableLeft="@mipmap/icon_class"
        android:text="分类" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_info"
            style="@style/LeftMenuBottomTextStyle"
            android:drawableTop="@mipmap/icon_info"
            android:text="软件说明" />

        <TextView
            android:id="@+id/tv_exit"
            style="@style/LeftMenuBottomTextStyle"
            android:drawableTop="@mipmap/icon_exit"
            android:text="退出" />

    </LinearLayout>

</LinearLayout>